    int big = 0;
    int small= 100;
    int approved = 0;
    int suma = 0;
    int numero,elementos = 0;
    float average;
    numero = 1;
    while ( numero >= 0){
        numero = Integer.parseInt(JOptionPane.showInputDialog("Digite la nota del estudiante: "));
        suma += numero;
        elementos++;
        if (numero<0){
            break;
        }
        if (numero<=small){
            small=numero;
        }
        if (numero>=big){
            big=numero;
        }
        if (numero>=70){
            approved++;
        }  
    }
    
        average = (float) suma/elementos;
     JOptionPane.showMessageDialog(null, "La nota promedio es : "+average+"\n"+"La nota mayor es : "+big+"\n" + "La nota menor es : "+small+"\n"+"Los estudiantes aprovados son : "+approved);
      
        }
